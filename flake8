[flake8]
ignore =
    # Whitespace before ':'. Align with black, a popular Python code formatter.
    E203,
    # Line break occurred before a binary operator. Align with black.
    W503,
    # Ignore import warnings
    F401,
    F403,
    F405,
    # Ignore missing function or module docstrings
    D100,
    D103,
    # Allow for uppercase variable names like P
    N803,
    N806
